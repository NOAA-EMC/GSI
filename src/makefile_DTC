# ----

LIB =   libgsi.a

# ------------------------
# Call compiler and linker
# ------------------------

##all : $(LIB) $(EXE_FILE)
all : $(LIB) gsi.exe


$(LIB):	 $(OBJS)
	echo $(OBJS)
	$(AR) -ruv $(LIB) $(OBJS)

#$(EXE_FILE) : $(OBJS) $(LIB) gsimain.o
#	$(LD) $(LDFLAGS) -o $@ gsimain.o $(OBJS) $(LIBS)

gsi.exe:  $(OBJS) $(LIB) gsimain.o
	$(F90) $(LDFLAGS) -o gsi.exe gsimain.o libgsi.a $(LIBcrtm) $(LIBsfcio) $(LIBsigio) $(LIBw3) $(LIBbacio) $(LIBbufr) $(LIBsp) $(LIBgfsio) $(LIBmpeu) $(LIBwrf) $(LIBnetcdf) $(LIBsys) $(LIBrrcld)
	cp gsi.exe $(COREBIN)

# DEPENDENCIES : only dependencies after this line (don't remove the word DEPENDENCIES)

include Makefile.dependency

.SUFFIXES : .F90 .o

.F90.o:
	$(SED_FTN) $*.F90 > $*.b
	$(CPP) $(CPPFLAGS) $*.b  > $*.f90
	$(RM) $*.b
	$(F90) -c $(FFLAGS) $*.f90
	$(RM) $*.f90

clean:
	rm -f *.o *.exe $(LIB)

